<vertical spacing='1' horizontal-fit='PreferredSize'>
  <checkbox-setting id='enabled' text='Enabled' on-change='update_model' apply-on-change='true' value='enabled_value' hover-hint='Toggle this counter on or off.'></checkbox-setting>
  <dropdown-list-setting id='position' text='Position' on-change='update_model' apply-on-change='true' value='position_value' options='position_options' formatter='position_formatter' hover-hint='The relative position of common UI elements.'></dropdown-list-setting>
  <list-setting id='distance' text='Distance' on-change='update_model' apply-on-change='true' value='distance_value' options='distance_options' hover-hint='How far from the position the counter will be. A higher number means farther away.'></list-setting>
</vertical>